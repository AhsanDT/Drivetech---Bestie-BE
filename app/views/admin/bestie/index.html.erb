<section id="account_section">
  <%= render 'shared/sidebar' %>
    <div id="besties-table" class="main_side">
      <div id="top_header">
        <h2>Besties</h2>
      </div>
      <div class="row">
       <div class="col-6">
        <ul class="top_blk">
          <li>
            <div class="dropdown">
              <button class="filter text dropdown-toggle fs_5 fw_600" data-bs-toggle="dropdown">
                <div class="img_blk">
                  <img src="/assets/filter-icon.svg" alt="">
                </div>
                filters
              </button>
              <ul class="dropdown-menu">
                <li><button type="button">All Data</button></li>
                <li><button type="button">User's Info</button></li>
                <li><button type="button">Vacant Land</button></li>
                <li><button type="button"> Dream Address</button></li>
                <li><button type="button">I Want to Buy</button></li>
                <li><button type="button">I Want to Sell</button></li>
              </ul>
            </div>
          </li>
          <li>
            <div class="form_blk">
              <div class="icon_blk">
                <img src="/assets/Search.svg" alt="">
              </div>
              <input type="search" placeholder="Search" class="input">
            </div>
          </li>
        </ul>
      </div>
      <div class="col-6">
        <ul class="right_blk">
          <button type="button" class="filter">
            <div class="img_blk">
              <img src="/assets/download.svg" alt="">
            </div>
            Download CSV
          </button>
        </ul>
      </div>
    </div>

    <!-- table_section -->
    <div id="table-besty">
      <div class="table__blk">
        <table>
          <thead>
            <tr>
              <th style="width: 22rem;">Full Name</th>
              <th style="width: 22rem;">Email</th>
              <th style="width: 15rem;">Phone Number</th>
              <th style="width: 18rem;">Country</th>
              <th style="width: 13rem;">Experience</th>
              <th style="width: 16rem;">Rate</th>
            </tr>
          </thead>
          <tbody>
            <% @besties.each do |bestie| %>
              <tr>
                <td class="fw-bold"><%= link_to bestie&.full_name, admin_bestie_path(id: bestie.id) %></td>
                <td><%= bestie&.email %></td>
                <td><%= bestie&.phone_number %></td>
                <td>United States</td>
                <td><%= bestie&.experience %></td>
                <td class="color-green">$<%= bestie&.rate %>/h</td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>

  <!-- pagination_section -->
  <div class="paginate_sec">
    <p>Showing 1 to 9 of 200 entries</p>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page_item disable me-4">
          <a class="page_link" href="#" aria-label="Previous">
            <div class="icon_blk me-2">
              <img src="/assets/left arrow.svg" aria-hidden="true" alt="icon">
            </div>
            Previous
          </a>
        </li>
        <li class="page_no "><a class="" href="#">1</a></li>
        <li class="page_no"><a class="" href="#">2</a></li>
        <li class="page_no"><a class="" href="#">3</a></li>
        <li class="page_item ms-4">
          <a class="page_link fw_600" href="#" aria-label="Previous">
            Next
            <div class="icon_blk ms-2">
              <img src="/assets/right arrow.svg" aria-hidden="true" alt="icon">
            </div>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
</section>
<!-- account_section -->


<!-- Main Js -->
<script src="/assets/main.js"></script>
