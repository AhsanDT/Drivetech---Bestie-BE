<section id="logon" style="background-image: url('/assets/Logon.jpg')">
  <div class="contain">
    <div class="log_blk">
      <div class="form_wrapper">
        <div class="logo">
          <img src="/assets/logo-on.svg" alt="">
        </div>
        <h2 class="mb-4">Reset Password</h2>
        <h5>Enter your new password below</h5>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <h6>New Password</h6>
          <div class="form_blk input">
            <img src="/assets/icon-lock.svg" alt="">
            <input type="password" name="admin[password]" class="input" placeholder="Type here">
          </div>
          <h6>Retype New Password</h6>
          <div class="form_blk input">
            <img src="/assets/icon-lock.svg" alt="">
            <input type="password" name="admin[password]" class="input" placeholder="Type here">
          </div>
          <div class="btn_blk">
            <%= f.submit "Reset Password", class: 'site_btn w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- Logon Section -->


<!-- Main Js -->
<script src="/assets/main.js"></script>
