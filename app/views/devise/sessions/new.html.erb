<section id="logon" style="background-image: url('/assets/Logon.jpg')">
  <div class="contain">
    <div class="log_blk">
      <div class="form_wrapper">
        <div class="logo">
          <img src="/assets/logo-on.svg" alt="">
        </div>
        <h2 class="mb-4">Sign in to manage</h2>
        <h5>Enter your details below</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h6>Email Address</h6>
          <div class="form_blk <%= alert["password"].present? ? "error" : "" rescue ""%>" id="email_div">
            <input type="email" name="admin[email]"  id="customemailfield" class="input" placeholder="Type here">
          </div>
          <p class="error_text">Invalid email address</p>
          <div class="d-flex justify-content-between">
            <h6>Password</h6>
            <p><a href="<%= new_admin_password_path %>">Forgot password?</a></p>
          </div>
          <div class="form_blk input <%= alert["email"].present? ? "error" : "" rescue ""%>" id="password_div">
            <img src="/assets/icon-lock.svg" alt="">
            <input type="password" name="admin[password]" id="custompasswordfield" class="input" placeholder="Type here">
          </div>
          <p class="error_text">Incorrect Password</p>
          <div class="btn_blk">
            <%= f.submit 'Login', class: 'site_btn w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- Logon Section -->

<!-- Main Js -->
<!--<script src="/assets/main.js"></script>-->

<script>
  $(document).ready(function(){
    $("#customemailfield,#custompasswordfield").focusin(function (){
        $("#password_div").removeClass('error');
        $("#email_div").removeClass('error');
    });
  });
</script>
